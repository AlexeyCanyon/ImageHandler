<Window x:Class="ImageHandler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageHandler"
        xmlns:cefSharp="clr-namespace:CefSharp.Wpf;assembly=CefSharp.Wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="1300">
    <Grid Background="Black">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="2.5*" />
        </Grid.ColumnDefinitions>
        <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Hidden">
            <StackPanel Image.MouseDown="ImageClicked" x:Name="imagesPanel">  
            </StackPanel>
        </ScrollViewer>
        
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Image Grid.Row="0" x:Name="MainImage" Source="D:/3.jpg" MouseDown="updatePixel"/>
                
            <StackPanel Grid.Row="1">
                <Label Content="Размер файла в пикселях: " Foreground="Azure" FontFamily="OpenSans" x:Name="sizeOfImage"></Label> 
                <Label Content="Разрешение файла: " Foreground="Azure" FontFamily="OpenSans" x:Name="resolutionOfImage"></Label>
                <Label Content="Код текущего пикселя: " Foreground="Azure" FontFamily="OpenSans" x:Name="currentPixel"></Label>
                <Label Content="Различных цветов в картинке: " Foreground="Azure" FontFamily="OpenSans" x:Name="colorsCount"></Label>
                <Button x:Name="addPictures" Content="Добавить изображения" Click="AddPictures" Foreground="Azure" Background="DimGray" Width="150px" HorizontalAlignment="Left"></Button>
                <Button x:Name="openMap" Content="Открыть карту" Click="OpenMap" Foreground="Azure" Background="DimGray" Width="150px" HorizontalAlignment="Left"></Button>
            </StackPanel>
            <StackPanel Grid.Row="1" Width="200px" Margin="210,0,513,0">
                <Label Content="Название картины: " Foreground="Azure" FontFamily="OpenSans" x:Name="nameOfImage"></Label>
                <Label Content="Автор картины: " Foreground="Azure" FontFamily="OpenSans" x:Name="authorOfImage"></Label>
                <Label Content="Год создания картины: " Foreground="Azure" FontFamily="OpenSans" x:Name="YearOfCreationImage"></Label>
                <Label Content="Материал: " Foreground="Azure" FontFamily="OpenSans" x:Name="MaterialImage"></Label>
                <Label Content="Описание: " Foreground="Azure" FontFamily="OpenSans" x:Name="DescriptionImage"></Label>
                <Label Content="Правила использования: " Foreground="Azure" FontFamily="OpenSans" x:Name="RulesOfImage"></Label>
            </StackPanel>
            <StackPanel Grid.Row="1" Width="200px" Margin="415,0,308,0">
                <Label Content="Технология: " Foreground="Azure" FontFamily="OpenSans" x:Name="TechnologyOfImage"></Label>
                <Label Content="Насыщенность красного: " Foreground="Azure" FontFamily="OpenSans" x:Name="PercentOfRedImage"></Label>
                <Label Content="Насыщенность зеленого: " Foreground="Azure" FontFamily="OpenSans" x:Name="PercentOfGreenImage"></Label>
                <Label Content="Насыщенность синего: " Foreground="Azure" FontFamily="OpenSans" x:Name="PercentOfBlueImage"></Label>
                <Label Content="Место хранения: " Foreground="Azure" FontFamily="OpenSans" x:Name="PlaceOfStorageImage"></Label>
                <Label Content="Место создания: " Foreground="Azure" FontFamily="OpenSans" x:Name="PlaceOfCreationImage"></Label>
            </StackPanel>
        </Grid>
       
 
    </Grid>
</Window>